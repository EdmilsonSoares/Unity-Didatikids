using UnityEngine;
using System.IO;

public class JsonLoader : MonoBehaviour
{
    private DifficultyLevels data;

    void Start()
    {
        LoadJson();
        string palavra = GetWord("medium", "level_3");
        Debug.Log($"Palavra encontrada: {palavra}");
    }

    void LoadJson()
    {
        string path = Path.Combine(Application.streamingAssetsPath, "palavras.json");
        
        if (File.Exists(path))
        {
            string jsonContent = File.ReadAllText(path);
            data = JsonUtility.FromJson<DifficultyLevels>(jsonContent);
        }
        else
        {
            Debug.LogError("Arquivo JSON não encontrado!");
        }
    }

    string GetWord(string difficulty, string level)
    {
        if (data != null && data.difficulties.ContainsKey(difficulty) && data.difficulties[difficulty].ContainsKey(level))
        {
            return data.difficulties[difficulty][level];
        }

        return "Palavra não encontrada!";
    }
}
